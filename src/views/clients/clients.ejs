<%- include('../partials/head') %>
<link rel="stylesheet" href="/css/users.css" />
<title>Inventario</title>
</head>

<body>
  <header>
    <div class="logo">
  
      
      <a href="/"><img src="/img/OIP (1).jpg" alt="Logo" /></a>
      </div>
    <!--<div class="buscador">
      <input type="text" placeholder="Buscar productos..." />
      <button type="submit">Buscar</button>
    </div>-->
  
    <nav class="barra-navegacion">
      <ul class="barra-izquierda">
        <li><a href="/employees">Empleados</a></li>
        <% if (locals.isLogged) { %>
        <li><a href="/new-employee">Nuevo empleado</a></li>
        <% } %>
        <li><a href="/products">Inventario</a></li>
        <% if (locals.isLogged) { %>
        <li><a href="/new-product">Nuevo producto</a></li>
        <% } %>    
        <li><a href="/clients">Clientes</a></li>
        <% if (locals.isLogged) { %>
        <li><a href="/new-client">Nuevo cliente</a></li>
        <% } %> 
      </ul>
  
      <ul class="barra-derecha">
        <% if (locals.isLogged) { %>
        <li class="nav-item">
          <div class="perfil-dropdown">
            <img src="/img/users/<%= locals.userLogged.Image %>" width="40" style="border-radius: 50%;">
            <a class="">Hola <%= locals.userLogged.FirstName %> </a>
            <ul class="dropdown-menu">
              <li><a href="/profile">Mi perfil</a></li>
              <li><a href="/logout">Cerrar sesión</a></li>
            </ul>
          </div>
        </li>
        <% } else { %>
        <li><a href="/login">Iniciar sesión</a></li>
        <li><a href="/register">Registrarse</a></li>
        <% } %>
  
      </ul>
    </nav>
  </header>

  <main>
    <h2>Lista de Clientes</h2>
    <section class="users_container">
      <% for(let i = 0; i < allClients.length; i++){ %>
      <article class="user_container">
        <% if (allClients[i].Image && allClients[i].Image.length) { %>
          <img src="/img/clients/<%= allClients[i].Image %>" alt="image" width="300px" height="300px">
          <% } else { %>     
          <img src="/img/clients/usuarioSinImagen.jpg" alt="image" width="300px" height="300px">
            <% } %>
            <h3 ><%= allClients[i].FirstName %></h3>
            <h3 ><%= allClients[i].LastName %></h3>           
            <h3>ID: <%= allClients[i].IDClient %></h3>
            <h3>Stock: <%= allClients[i].Email %></h3>
            <h3>Email: <%= allClients[i].Tel %></h3>
            <form action="/client/<%= allClients[i].IDClient %>" method="GET">
              <button type="submit">Ver</button>
            </form>
            <form action="/products/delete/<%= allClients[i].IDClient %>?_method=DELETE" method="POST">
              <button type="submit">Borrar</button>
            </form>

      </article>
      <% } %>
    </section>
  </main>

  <%- include('../partials/footer') %>
</body>

</html>