<%- include('../partials/head') %>

<link rel="stylesheet" href="/css/newProduct.css" />
<title>New cateringType</title>
</head>

<body>
  <%- include('../partials/header') %>
  <main>
    <div class="containerNP">
      <h1>Crear nuevo tipo de categoria</h1>
      <form action="/cateringTypes" method="POST" enctype="multipart/form-data">

        <label for="nameCateringType"> Nombre del Tipo de Categoria:</label>
        <input type="text" id="nameCateringType" name="nameCateringType" class="control <%= locals.errors && errors.nameCateringType ? 'is-invalid' : '' %>" value="<%= locals.oldData ? oldData.nameCateringType : '' %>">
        <% if(locals.errors && errors.nameCateringType) { %>
        <div class="text-danger">
          <%= errors.nameCateringType.msg  %>
        </div>
        <% } %>

        <label for="employeesRequired">Empleado Requeridos: </label>
        <input type="number" id="employeesRequired" name="employeesRequired" class="control <%= locals.errors && errors.employeesRequired ? 'is-invalid' : '' %>" value="<%= locals.oldData ? oldData.employeesRequired : '' %>"></input>
        <% if(locals.errors && errors.employeesRequired) { %>
        <div class="text-danger">
          <%= errors.employeesRequired.msg  %>
        </div>
        <% } %>

        <label for="productsRequired">Productos Requeridos: </label>
        <input type="number" id="productsRequired" name="productsRequired" class="control <%= locals.errors && errors.productsRequired ? 'is-invalid' : '' %>" value="<%= locals.oldData ? oldData.productsRequired : '' %>"></input>
        <% if(locals.errors && errors.productsRequired) { %>
        <div class="text-danger">
          <%= errors.productsRequired.msg  %>
        </div>
        <% } %>
        
        

        <button type="submit">Crear</button>
        <button type="reset">Borrar</button>

      </form>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>

</html> 